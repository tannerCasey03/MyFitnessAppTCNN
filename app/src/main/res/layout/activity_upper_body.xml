<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/grey"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upper Body"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/teal"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>

    <ImageView
        android:id="@+id/picture"
        android:layout_width="312dp"
        android:layout_height="190dp"
        tools:srcCompat="@drawable/overhead" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Push-ups, 3 sets of 10"
        android:textSize="25dp"
        app:cornerRadius="0dp"
        android:textColor="@color/teal"
        android:backgroundTint="@color/Darkgrey"
        android:id="@+id/pushBTN"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 40 calories burn"
        android:textSize="20dp"
        android:textColor="@color/teal"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Burpees, 3 sets of 10"
        android:textSize="25dp"
        app:cornerRadius="0dp"
        android:textColor="@color/teal"
        android:backgroundTint="@color/Darkgrey"
        android:id="@+id/burpBTN"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 45 calories burn"
        android:textSize="20dp"
        android:textColor="@color/teal"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="31dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weighted OverHead Extentions, 2 sets of 15"
        android:textSize="20dp"
        app:cornerRadius="0dp"
        android:textColor="@color/teal"
        android:backgroundTint="@color/Darkgrey"
        android:id="@+id/extendBTN"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 calories burn"
        android:textSize="20dp"
        android:textColor="@color/teal"/>

</LinearLayout>